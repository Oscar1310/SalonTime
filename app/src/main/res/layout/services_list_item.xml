<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="6"
        android:text="Hair coloring"
        android:textAlignment="viewStart"
        android:textColor="@color/secondary_text"
        app:layout_constraintEnd_toStartOf="@+id/service_valuta"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="15"
        android:textAlignment="textEnd"
        app:layout_constraintBaseline_toBaselineOf="@+id/service_name"
        app:layout_constraintEnd_toStartOf="@+id/service_valuta" />

    <TextView
        android:id="@+id/service_valuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:text="â‚¬"
        android:textAlignment="textStart"
        android:textColor="@color/secondary_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/service_price"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>